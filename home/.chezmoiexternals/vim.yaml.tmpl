{{- $plugPath := "" }}
{{- if eq .chezmoi.os "windows" }}
{{-   $plugPath = "vimfiles/autoload/plug.vim" }}
{{- else }}
{{-   $plugPath = ".vim/autoload/plug.vim" }}
{{- end }}

{{- $plugPath | quote }}:
    type: "file"
    url: "https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
    refreshPeriod: "168h"
